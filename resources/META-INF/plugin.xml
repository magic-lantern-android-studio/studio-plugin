<idea-plugin version="2">
  <id>com.wizzer.magiclantern.studio.plugin.id</id>
  <name>Magic Lantern Studio</name>
  <version>0.1</version>
  <vendor email="msm@wizzerworks.com" url="http://www.wizzerworks.com">Wizzer Works</vendor>

  <description><![CDATA[
      Support for building Magic Lantern applications targeting the Android platform.
    ]]></description>

  <change-notes><![CDATA[
      Initial Proof-of-Concept<br>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->
  <depends>org.jetbrains.android</depends>
  <depends>org.jetbrains.plugins.gradle</depends>
  <depends>com.intellij.properties</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- TODO: AndroidWizardWrapper wraps the old DynamicWizard and this registration should be removed once we've ported to ModelWizard -->
    <moduleBuilder builderClass="com.wizzer.jetbrains.newProject.AndroidWizardWrapper"/>
    <fileTypeFactory implementation="com.wizzer.dwp.DigitalWorkprintFileTypeFactory"/>
    <lang.parserDefinition language="DigitalWorkprint" implementationClass="com.wizzer.dwp.DigitalWorkprintParserDefinition"/>
    <lang.syntaxHighlighterFactory key="DigitalWorkprint" implementationClass="com.wizzer.dwp.DigitalWorkprintSyntaxHighlighterFactory"/>
    <colorSettingsPage implementation="com.wizzer.dwp.DigitalWorkprintColorSettingsPage"/>
    <annotator language="JAVA" implementationClass="com.wizzer.dwp.DigitalWorkprintAnnotator"/>
    <codeInsight.lineMarkerProvider language="JAVA" implementationClass="com.wizzer.dwp.DigitalWorkprintLineMarkerProvider"/>
    <completion.contributor language="DigitalWorkprint" implementationClass="com.wizzer.dwp.DigitalWorkprintCompletionContributor"/>
    <psi.referenceContributor implementation="com.wizzer.dwp.DigitalWorkprintReferenceContributor"/>
    <lang.refactoringSupport language="DigitalWorkprint" implementationClass="com.wizzer.dwp.DigitalWorkprintRefactoringSupportProvider"/>
    <lang.findUsagesProvider language="DigitalWorkprint" implementationClass="com.wizzer.dwp.DigitalWorkprintFindUsagesProvider"/>
    <lang.foldingBuilder language="JAVA" implementationClass="com.wizzer.dwp.DigitalWorkprintFoldingBuilder"/>
    <gotoSymbolContributor implementation="com.wizzer.dwp.DigitalWorkprintChooseByNameContributor"/>
    <lang.psiStructureViewFactory language="DigitalWorkprint" implementationClass="com.wizzer.dwp.DigitalWorkprintStructureViewFactory"/>
    <lang.formatter language="DigitalWorkprint" implementationClass="com.wizzer.dwp.DigitalWorkprintFormattingModelBuilder"/>
    <codeStyleSettingsProvider implementation="com.wizzer.dwp.DigitalWorkprintCodeStyleSettingsProvider"/>
    <langCodeStyleSettingsProvider implementation="com.wizzer.dwp.DigitalWorkprintLanguageCodeStyleSettingsProvider"/>
    <lang.commenter language="DigitalWorkprint" implementationClass="com.wizzer.dwp.DigitalWorkprintCommenter"/>
  </extensions>

  <actions>
    <!--
    Create a submenu items, "New Project", "Inspect File", "New Digital Workprint", and "About",
    under a main menu entry called "Magic Lantern".
    -->
    <group id="MagicLanternStudioPlugin.Tools" text="_Magic Lantern" description="Magic Lantern Studio menu">
      <add-to-group group-id="MainMenu" anchor="last"  />
      <action id="MagicLanternStudioPlugin.MleNewProjectAction" class="com.wizzer.tools.idea.actions.MleNewProjectAction"
              text="New Project" description="Create a new Android Project." />
      <action id="MagicLanternStudioPlugin.MleInspectFileAction" class="com.wizzer.tools.idea.actions.MleInspectFileAction"
              text="Inspect File" description="Display information about selected files in a Project." />
      <action id="MagicLanternStudioPlugin.MleNewDigitalWorkprintAction" class="com.wizzer.tools.idea.actions.MleNewDigitalWorkprintAction"
              text="New Digital Workprint" description="Create a new Digital Workprint." />
      <action id="MagicLanternStudioPlugin.MleAboutPluginAction" class="com.wizzer.tools.idea.actions.MleAboutPluginAction"
              text="About" description="Display information about the Magic Lantern Studio Plugin." />
    </group>
  </actions>

</idea-plugin>